{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Illustra",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/bin/Debug/net9.0-windows/Illustra.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "justMyCode": false,
      "logging": {
        "moduleLoad": false
      }
    },
    {
      "name": "Attach to MCP Host",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": false
    },
    {
      "name": ".NET Core NUnit Test",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/tests/bin/Debug/net9.0-windows/YourTestProject.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    }
  ],
  "compounds": [
    {
      "name": "Debug Illustra + MCP Host",
      "configurations": [
        "Launch Illustra",
        "Attach to MCP Host"
      ]
    }
  ]
}
<Window x:Class="Illustra.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Illustra.Views"
        xmlns:vm="clr-namespace:Illustra.ViewModels"
        mc:Ignorable="d"
        Title="{DynamicResource String_Settings_Title}"
        Height="350"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Window.Resources>
        <vm:SettingsViewModel x:Key="SettingsViewModel"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:SettingsView x:Name="SettingsViewControl"
                            DataContext="{Binding}"/>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="CancelButton"
                    Content="{DynamicResource String_Settings_Cancel}"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding CancelCommand, Mode=OneWay}"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Content="{DynamicResource String_Settings_Save}"
                    Width="100"
                    Command="{Binding SaveCommand, Mode=OneWay}"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

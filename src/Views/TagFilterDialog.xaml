<Window x:Class="Illustra.Views.TagFilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Illustra.Views"
        mc:Ignorable="d"
        Title="{DynamicResource String_TagFilter_Title}"
        Height="300"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 説明テキスト -->
        <TextBlock Grid.Row="0"
                   Text="{DynamicResource String_TagFilter_Description}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>

        <!-- タグ入力エリア -->
        <ScrollViewer Grid.Row="1"
                VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="TagsStackPanel">
                <!-- タグ入力フィールドは動的に追加されます -->
            </StackPanel>
        </ScrollViewer>

        <!-- ボタン -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="{DynamicResource String_TagFilter_ClearAll}"
                    Width="100"
                    Height="25"
                    Margin="0,0,10,0"
                    Click="ClearAllButton_Click"
                    HorizontalAlignment="Left"/>
            <Button Content="{DynamicResource String_Common_Cancel}"
                    Width="80"
                    Height="25"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
            <Button Content="{DynamicResource String_Common_Ok}"
                    Width="80"
                    Height="25"
                    Click="OkButton_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window> 
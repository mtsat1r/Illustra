<Window x:Class="Illustra.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="FolderPath" Width="400" Margin="10"/>
            <Button x:Name="StartButton" Content="Start Monitoring" Width="150" Margin="10" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Stop Monitoring" Width="150" Margin="10" Click="StopButton_Click"/>
            <ListView x:Name="FilesList" Width="400" Height="200" Margin="10"/>
            <TextBox x:Name="LogView" Width="400" Height="100" Margin="10" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>
    </Grid>
</Window>

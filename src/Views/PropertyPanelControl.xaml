<UserControl x:Class="Illustra.Views.PropertyPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Illustra.Views"
             xmlns:controls="clr-namespace:Illustra.Controls"
             xmlns:helpers="clr-namespace:Illustra.Helpers"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid x:Name="PropertiesGrid" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ファイル名 -->
            <TextBlock Grid.Row="0"
                       Text="{Binding FileName}"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>

            <!-- レーティング -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="レーティング: "
                           VerticalAlignment="Center"/>
                <Button x:Name="RatingStar1"
                        Style="{StaticResource RatingStarButton}"
                        Tag="1"
                        Click="RatingStar_Click">
                    <controls:RatingStarControl RatingValue="1" Height="18" Width="18" IsFilled="False"
                                                TextColor="{x:Static helpers:RatingHelper.TextColor}" />
                </Button>
                <Button x:Name="RatingStar2"
                        Style="{StaticResource RatingStarButton}"
                        Tag="2"
                        Click="RatingStar_Click">
                    <controls:RatingStarControl RatingValue="2" Height="18" Width="18" IsFilled="False"
                                                TextColor="{x:Static helpers:RatingHelper.TextColor}" />
                </Button>
                <Button x:Name="RatingStar3"
                        Style="{StaticResource RatingStarButton}"
                        Tag="3"
                        Click="RatingStar_Click">
                    <controls:RatingStarControl RatingValue="3" Height="18" Width="18" IsFilled="False"
                                                TextColor="{x:Static helpers:RatingHelper.TextColor}" />
                </Button>
                <Button x:Name="RatingStar4"
                        Style="{StaticResource RatingStarButton}"
                        Tag="4"
                        Click="RatingStar_Click">
                    <controls:RatingStarControl RatingValue="4" Height="18" Width="18" IsFilled="False"
                                                TextColor="{x:Static helpers:RatingHelper.TextColor}" />
                </Button>
                <Button x:Name="RatingStar5"
                        Style="{StaticResource RatingStarButton}"
                        Tag="5"
                        Click="RatingStar_Click">
                    <controls:RatingStarControl RatingValue="5" Height="18" Width="18" IsFilled="False"
                                                TextColor="{x:Static helpers:RatingHelper.TextColor}" />
                </Button>
            </StackPanel>

            <!-- ファイル情報 -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- フォルダパス -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="フォルダ: "
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1"
                           Text="{Binding FolderPath}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,5"/>

                <!-- ファイルサイズ -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="サイズ: "
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="{Binding FileSizeFormatted}"
                           Margin="0,0,0,5"/>

                <!-- 作成日時 -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="作成日時: "
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="{Binding CreatedDate, StringFormat=yyyy/MM/dd HH:mm:ss}"
                           Margin="0,0,0,5"/>

                <!-- 更新日時 -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="更新日時: "
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                           Text="{Binding ModifiedDate, StringFormat=yyyy/MM/dd HH:mm:ss}"
                           Margin="0,0,0,5"/>

                <!-- 解像度 -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="解像度: "
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="4" Grid.Column="1"
                           Text="{Binding Resolution}"
                           Margin="0,0,0,5"/>

                <!-- 画像形式 -->
                <TextBlock Grid.Row="5" Grid.Column="0"
                           Text="画像形式: "
                           Margin="0,0,10,5"/>
                <TextBlock Grid.Row="5" Grid.Column="1"
                           Text="{Binding FileType}"
                           Margin="0,0,0,5"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

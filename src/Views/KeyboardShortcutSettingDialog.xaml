<Window x:Class="Illustra.Views.KeyboardShortcutSettingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Illustra.ViewModels"
        mc:Ignorable="d"
        Title="ショートカットキー設定"
        Height="280"
        Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        PreviewKeyDown="Window_PreviewKeyDown"
        d:DataContext="{d:DesignInstance Type=vm:KeyboardShortcutSettingDialogViewModel}">

    <Window.Resources>
        <Style TargetType="ToggleButton">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#666666"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#DDDDDD"/>
                    <Setter Property="BorderBrush" Value="#333333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- モディファイアキー -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15">
            <ToggleButton Content="Ctrl"
                        IsChecked="{Binding IsCtrlPressed}"/>
            <ToggleButton Content="Alt"
                        IsChecked="{Binding IsAltPressed}"/>
            <ToggleButton Content="Shift"
                        IsChecked="{Binding IsShiftPressed}"/>
            <ToggleButton Content="Win"
                        IsChecked="{Binding IsWindowsPressed}"/>
        </StackPanel>

        <!-- キー入力ガイド -->
        <TextBlock Grid.Row="1"
                  Text="キーを押してください"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,8"/>

        <!-- 現在のキー表示 -->
        <Border Grid.Row="2"
                BorderBrush="#666666"
                BorderThickness="1"
                MinWidth="280"
                Margin="0,0,0,15">
            <TextBlock Text="{Binding ShortcutText}"
                      FontSize="24"
                      FontWeight="Bold"
                      TextWrapping="NoWrap"
                      TextTrimming="None"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Padding="15">
                <TextBlock.LayoutTransform>
                    <ScaleTransform x:Name="scale"/>
                </TextBlock.LayoutTransform>
                <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                    Storyboard.TargetName="scale"
                                    Storyboard.TargetProperty="ScaleX"
                                    From="1" To="0.7" Duration="0:0:0"
                                    BeginTime="0:0:0"/>
                                <DoubleAnimation
                                    Storyboard.TargetName="scale"
                                    Storyboard.TargetProperty="ScaleY"
                                    From="1" To="0.7" Duration="0:0:0"
                                    BeginTime="0:0:0"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
            </TextBlock>
        </Border>

        <!-- ボタン -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="キャンセル"
                    Width="70"
                    Height="28"
                    Margin="0,0,8,0"
                    Command="{Binding CancelCommand}"/>

            <Button Grid.Column="2"
                    Content="保存"
                    Width="70"
                    Height="28"
                    Command="{Binding SaveCommand}"/>
        </Grid>
    </Grid>
</Window>

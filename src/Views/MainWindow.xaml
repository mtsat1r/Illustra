<Window x:Class="Illustra.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vw="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        xmlns:local="clr-namespace:Illustra.Views"
        xmlns:helpers="clr-namespace:Illustra.Helpers"
        xmlns:viewmodels="clr-namespace:Illustra.ViewModels"
        mc:Ignorable="d"
        Icon="{StaticResource AppIcon}"
        Title="Illustra - 画像ビューア"
        Height="600"
        Width="900">
    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- メニューバー -->
        <Menu Grid.Row="0">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="開く(_O)" />
                <Separator />
                <MenuItem Header="終了(_X)" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="表示(_V)">
                <MenuItem Header="サムネイルサイズ(_S)">
                    <MenuItem Header="小(_S)" Click="SmallThumbnailMenuItem_Click" />
                    <MenuItem Header="中(_M)" Click="MediumThumbnailMenuItem_Click" IsChecked="True" />
                    <MenuItem Header="大(_L)" Click="LargeThumbnailMenuItem_Click" />
                </MenuItem>
                <MenuItem Header="並び順(_O)">
                    <MenuItem x:Name="SortByDateMenuItem" Header="作成日時順(_D)" IsCheckable="True" IsChecked="True" Click="SortByDateMenuItem_Click"/>
                    <MenuItem x:Name="SortByNameMenuItem" Header="ファイル名順(_N)" IsCheckable="True" Click="SortByNameMenuItem_Click"/>
                    <Separator/>
                    <MenuItem x:Name="SortAscendingMenuItem" Header="昇順(_A)" IsCheckable="True" IsChecked="True" Click="SortOrderMenuItem_Click"/>
                    <MenuItem x:Name="SortDescendingMenuItem" Header="降順(_D)" IsCheckable="True" Click="SortOrderMenuItem_Click"/>
                </MenuItem>
                <Separator />
                <MenuItem Header="更新(_R)" Click="RefreshMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="ツール(_T)">
                <MenuItem Header="設定(_S)" Click="SettingsMenuItem_Click" />
            </MenuItem>
        </Menu>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="1" x:Name="MainContentGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- メインコンテンツの左右グリッド -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="150"/> <!-- フォルダツリービュー -->
                <ColumnDefinition Width="Auto"/> <!-- グリッドスプリッター -->
                <ColumnDefinition Width="*"/> <!-- サムネイルビュー -->
            </Grid.ColumnDefinitions>

            <!-- 左側：フォルダツリービュー -->
            <Grid Grid.Column="0" Grid.Row="0" x:Name="LeftPanelGrid">
                <!-- フォルダツリーの上下グリッド -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" MinHeight="50"/> <!-- お気に入りツリービュー -->
                    <RowDefinition Height="Auto"/> <!-- グリッドスプリッター -->
                    <RowDefinition Height="*" MinHeight="50"/> <!-- フォルダツリービュー -->
                </Grid.RowDefinitions>

                <!-- お気に入りツリービュー - ScrollViewerを削除し、TreeViewに直接ScrollBarVisibilityを設定 -->
                <TreeView Grid.Row="0"
                          x:Name="FavoriteFoldersTreeView"
                          SelectedItemChanged="FavoriteFoldersTreeView_SelectedItemChanged"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto"
                          AllowDrop="True"
                          PreviewMouseLeftButtonDown="FavoriteFolders_PreviewMouseLeftButtonDown"
                          PreviewMouseMove="FavoriteFolders_PreviewMouseMove"
                          DragOver="FavoriteFolders_DragOver"
                          Drop="FavoriteFolders_Drop">
                    <TreeView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.Resources>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFD47B00"/>
                                    <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                        <Condition Property="IsKeyboardFocused" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" Value="#FF007ACC"/>
                                    <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                </MultiTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0F000000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.Resources>
                </TreeView>

                <!-- フォルダツリーのグリッドスプリッター（水平分割） -->
                <GridSplitter Grid.Row="1"
                              x:Name="FavoritesSplitter"
                              Height="3"
                              HorizontalAlignment="Stretch"
                              Background="#FFCCCCCC" />

                <!-- 左側：フォルダツリービュー - ScrollViewerを削除し、TreeViewに直接ScrollBarVisibilityを設定 -->
                <TreeView Grid.Row="2"
                          x:Name="FolderTreeView"
                          SelectedItemChanged="FolderTreeView_SelectedItemChanged"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <TreeView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="お気に入りに追加" Click="AddToFavorites_Click" />
                            <MenuItem Header="お気に入りから削除" Click="RemoveFromFavorites_Click" />
                        </ContextMenu>
                    </TreeView.ContextMenu>
                    <TreeView.Resources>
                        <Style TargetType="TreeViewItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFD47B00"/>
                                    <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                        <Condition Property="IsKeyboardFocused" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" Value="#FF007ACC"/>
                                    <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                </MultiTrigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0F000000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.Resources>
                </TreeView>
            </Grid>

            <!-- 左右のペイン間のグリッドスプリッター（垂直分割） -->
            <GridSplitter Grid.Column="1" Grid.Row="0"
                        x:Name="MainSplitter"
                        Width="3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch"
                        Background="#FFCCCCCC" />

            <!-- 右側：メインコンテンツエリア -->
            <Grid Grid.Column="2" x:Name="RightPanelGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- サムネイルサイズ調整用のスライダー -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="サムネイルサイズ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Slider x:Name="ThumbnailSizeSlider"
                            Width="150"
                            Minimum="60"
                            Maximum="480"
                            Value="120"
                            TickFrequency="20"
                            IsSnapToTickEnabled="True"
                            ValueChanged="ThumbnailSizeSlider_ValueChanged"/>
                    <TextBlock x:Name="ThumbnailSizeText" Text="120" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- サムネイル表示エリア -->
                <ListView x:Name="ThumbnailItemsControl"
                          Grid.Row="1"
                          ItemsSource="{Binding Items}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          SelectionMode="Single"
                          IsSynchronizedWithCurrentItem="True"
                          Loaded="ThumbnailItemsControl_Loaded"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ScrollViewer.CanContentScroll="True"
                          ScrollViewer.PanningMode="Both"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          VirtualizingPanel.CacheLengthUnit="Page"
                          VirtualizingPanel.CacheLength="1,1"
                          VirtualizingPanel.IsContainerVirtualizable="True"
                          VirtualizingPanel.ScrollUnit="Pixel"
                          BorderThickness="0"
                          KeyDown="ThumbnailItemsControl_KeyDown"
                          PreviewMouseWheel="ThumbnailItemsControl_PreviewMouseWheel"
                          KeyboardNavigation.DirectionalNavigation="Contained"
                          KeyboardNavigation.TabNavigation="Cycle"
                          Focusable="True"
                          FocusVisualStyle="{x:Null}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <vw:VirtualizingWrapPanel
                                Orientation="Horizontal"
                                SpacingMode="Uniform"
                                IsVirtualizing="True"
                                VirtualizationMode="Recycling"
                                CacheLength="1,1"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="3" />
                            <Setter Property="BorderThickness" Value="1" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True" />
                            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling" />
                            <EventSetter Event="MouseDoubleClick" Handler="Thumbnail_MouseDoubleClick"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Grid>
                                            <!-- 通常の境界線（常に1ピクセル） -->
                                            <Border x:Name="NormalBorder"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                                                    BorderThickness="1"
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter />
                                            </Border>
                                            <!-- 選択時のハイライト境界線（オーバーレイ） -->
                                            <Border x:Name="SelectionBorder"
                                                    BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                                                    BorderThickness="2"
                                                    Opacity="0">
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="SelectionBorder" Property="Opacity" Value="1" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#0F000000"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Width="{Binding ElementName=ThumbnailSizeSlider, Path=Value}"
                                    Height="{Binding ElementName=ThumbnailSizeSlider, Path=Value}"
                                    BorderThickness="0"
                                    MouseLeftButtonDown="Thumbnail_MouseLeftButtonDown">
                                <Grid>
                                    <Image Source="{Binding ThumbnailInfo.Thumbnail}"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="2"/>
                                    <TextBlock Text="{Binding Name}"
                                               VerticalAlignment="Bottom"
                                               HorizontalAlignment="Center"
                                               Margin="2"
                                               Background="#80FFFFFF"
                                               Padding="2"
                                               Width="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                                               TextAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- プロパティパネルとのグリッドスプリッター -->
                <GridSplitter Grid.Row="2"
                              x:Name="PropertySplitter"
                              Height="4"
                              HorizontalAlignment="Stretch"
                              Background="#FFCCCCCC" />

                <!-- プロパティペイン -->
                <Grid Grid.Row="3" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ヘッダー -->
                    <TextBlock Grid.Row="0"
                               Text="プロパティ"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <!-- プロパティ表示 -->
                    <local:PropertyPanelControl x:Name="PropertyPanel" Grid.Row="1"/>
                </Grid>
            </Grid>

            <!-- ステータスバー -->
            <TextBlock x:Name="StatusBar"
                       Grid.Row="1"
                       Margin="5,2"
                       Text="準備完了"
                       Background="#F0F0F0"/>
        </Grid>
    </Grid>
</Window>

<UserControl x:Class="Illustra.Controls.WebpPlayerControl"
             x:Name="WebpPlayerRoot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Illustra.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mahcontrols="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" /> <!-- 表示領域 -->
            <RowDefinition Height="Auto" /> <!-- コントロール領域 -->
        </Grid.RowDefinitions>

        <!-- WebP表示とローディング表示 -->
        <Grid Grid.Row="0" Background="Black">
            <Image x:Name="WebpImage"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Stretch="Uniform"
                   Source="{Binding CurrentFrame}" />

            <!-- ローディング表示 -->
            <Grid Background="#80000000"
                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <mahcontrols:ProgressRing IsActive="True" Foreground="White" Width="50" Height="50"/>
                    <TextBlock Text="読み込み中..." Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- コントロール -->
        <Grid x:Name="ControlsPanel"
              Grid.Row="1"
              MinHeight="50"
              Background="#A0000000"
              VerticalAlignment="Stretch">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Grid.Row" Value="1"/>
                    <Setter Property="Background" Value="#A0000000"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsFullScreen}" Value="True">
                            <Setter Property="Grid.Row" Value="0"/>
                            <Setter Property="VerticalAlignment" Value="Bottom"/>
                            <Setter Property="Background" Value="#A0000000"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左側ボタン -->
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center" Margin="10,0">
                <Button Command="{Binding PreviousFrameCommand}" Width="30" Height="30" Margin="5" ToolTip="前のフレーム">
                    <iconPacks:PackIconMaterialDesign Kind="SkipPrevious" />
                </Button>
                <Button Command="{Binding PlayCommand}" Width="30" Height="30" Margin="5" ToolTip="再生">
                    <iconPacks:PackIconMaterialDesign Kind="PlayArrow" />
                </Button>
                <Button Command="{Binding PauseCommand}" Width="30" Height="30" Margin="5" ToolTip="一時停止">
                    <iconPacks:PackIconMaterialDesign Kind="Pause" />
                </Button>
                <Button Command="{Binding NextFrameCommand}" Width="30" Height="30" Margin="5" ToolTip="次のフレーム">
                    <iconPacks:PackIconMaterialDesign Kind="SkipNext" />
                </Button>
            </StackPanel>

            <!-- シークバー -->
            <Slider Grid.Column="1"
                    VerticalAlignment="Center" Margin="10,0"
                    Minimum="0"
                    Maximum="{Binding TotalFrames}"
                    Value="{Binding CurrentFrameIndex, Mode=TwoWay}"
                    IsMoveToPointEnabled="True"/>

            <!-- 右側情報 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock VerticalAlignment="Center" Margin="5,0">
                    <Run Text="{Binding CurrentTime, Mode=OneWay, StringFormat={}{0:mm\\:ss}}"/>
                    <Run Text=" / "/>
                    <Run Text="{Binding TotalDuration, Mode=OneWay, StringFormat={}{0:mm\\:ss}}"/>
                </TextBlock>
                <TextBlock VerticalAlignment="Center" Margin="5,0" Text="{Binding LoopCountText}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

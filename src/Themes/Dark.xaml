<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    mc:Ignorable="options">

    <ResourceDictionary.MergedDictionaries>
        <!-- Base resources -->
        <ResourceDictionary Source="pack://application:,,,/Themes/Base.xaml"/>
        <!-- MahApps Light theme (if needed, but likely overridden) -->
        <!-- <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.xaml" /> -->
    </ResourceDictionary.MergedDictionaries>

    <!-- Theme Metadata -->
    <system:String x:Key="Theme.Name">Illustra.Dark</system:String>
    <system:String x:Key="Theme.Origin">Illustra</system:String>
    <system:String x:Key="Theme.DisplayName">Illustra Dark</system:String>
    <system:String x:Key="Theme.BaseColorScheme">Dark</system:String>
    <system:String x:Key="Theme.ColorScheme">Illustra.Dark</system:String>
    <Color x:Key="Theme.PrimaryAccentColor">#FF6B90B8</Color>
    <!-- TODO: Verify/Adjust color value -->

    <!-- MahApps Base Colors (Light Theme Specific) -->
    <!-- ACCENT COLORS -->
    <Color x:Key="MahApps.Colors.Highlight">#FF6B90B8</Color>
    <Color x:Key="MahApps.Colors.Highlight.Custom">#FF6B90B8</Color>
    <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.AccentBase">#FF6B90B8</Color>
    <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.Accent">#CC6B90B8</Color>
    <!-- 80% -->
    <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.Accent2">#996B90B8</Color>
    <!-- 60% -->
    <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.Accent3">#666B90B8</Color>
    <!-- 40% -->
    <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.Accent4">#336B90B8</Color>
    <!-- 20% -->
    <!-- TODO: Verify/Adjust color value -->

    <!-- BASE COLORS -->
    <Color x:Key="MahApps.Colors.ThemeForeground">#FFCCCCCC</Color>
    <!-- Light Gray -->
    <Color x:Key="MahApps.Colors.ThemeBackground">#FF222222</Color>
    <!-- Dark Gray -->
    <Color x:Key="MahApps.Colors.IdealForeground">#FFCCCCCC</Color>
    <!-- Light Gray -->
    <Color x:Key="MahApps.Colors.Gray1">#FF1F1F1F</Color>
    <!-- Darkest Gray -->
    <Color x:Key="MahApps.Colors.Gray2">#FF222222</Color>
    <!-- Dark Gray (ThemeBackground) -->
    <Color x:Key="MahApps.Colors.Gray3">#FF333333</Color>
    <!-- Dark Gray -->
    <Color x:Key="MahApps.Colors.Gray4">#FF444444</Color>
    <!-- Dark Gray -->
    <Color x:Key="MahApps.Colors.Gray5">#FF555555</Color>
    <!-- Mid-Dark Gray -->
    <Color x:Key="MahApps.Colors.Gray6">#FF666666</Color>
    <!-- Mid-Dark Gray -->
    <Color x:Key="MahApps.Colors.Gray7">#FF777777</Color>
    <!-- Mid-Light Gray -->
    <Color x:Key="MahApps.Colors.Gray8">#FFAAAAAA</Color>
    <!-- Light Gray -->
    <Color x:Key="MahApps.Colors.Gray9">#FF555555</Color>
    <!-- combo box selected background (w/a) - Adjusted Dark -->
    <Color x:Key="MahApps.Colors.Gray10">#FFCCCCCC</Color>
    <!-- for menu check - Adjusted Light -->
    <Color x:Key="MahApps.Colors.Gray">#FF666666</Color>
    <!-- Mid-Dark Gray (New Gray6) -->
    <Color x:Key="MahApps.Colors.Gray.MouseOver">#FF888888</Color>
    <!-- Mid-Light Gray (New Gray7) -->
    <Color x:Key="MahApps.Colors.Flyout">#FF222222</Color>
    <!-- Dark Gray (ThemeBackground) -->
    <Color x:Key="MahApps.Colors.Thumb">#FF666666</Color>

    <!-- CORE CONTROL COLORS -->
    <Color x:Key="MahApps.Colors.ProgressIndeterminate1">#33787878</Color>
    <!-- Adjusted Dark -->
    <Color x:Key="MahApps.Colors.ProgressIndeterminate2">#336A6A6A</Color>
    <!-- Adjusted Dark -->
    <Color x:Key="MahApps.Colors.ProgressIndeterminate3">#4C787878</Color>
    <!-- Adjusted Dark -->
    <Color x:Key="MahApps.Colors.ProgressIndeterminate4">#4C6A6A6A</Color>
    <!-- Adjusted Dark -->

    <!-- Slider Colors -->
    <Color x:Key="MahApps.Colors.SliderValue.Disabled">#FF4C4C4C</Color>
    <!-- Adjusted Dark -->
    <Color x:Key="MahApps.Colors.SliderTrack.Disabled">#FF333333</Color>
    <!-- Adjusted Dark (New Gray3) -->
    <Color x:Key="MahApps.Colors.SliderThumb.Disabled">#FF555555</Color>
    <!-- Adjusted Dark (New Gray5) -->
    <Color x:Key="MahApps.Colors.SliderTrack.Hover">#FF888888</Color>
    <!-- Adjusted Dark (New Gray7) -->
    <Color x:Key="MahApps.Colors.SliderTrack.Normal">#FF555555</Color>
    <!-- Adjusted Dark (New Gray5) -->
    <SolidColorBrush x:Key="controls:SliderHelper.ThumbFillBrush"
            Color="{DynamicResource MahApps.Colors.Gray3}"/>
    <SolidColorBrush x:Key="controls:SliderHelper.ThumbBorderBrush"
            Color="{DynamicResource MahApps.Colors.Gray6}"/>



    <!-- Window Colors -->
    <Color x:Key="MahApps.Colors.Window.Background.Backdrop.Acrylic">#B21E1E1E</Color>

    <!-- Adjusted Dark -->
    <Color x:Key="MahApps.Colors.Window.Background.Backdrop.Auto">#FF222222</Color>
    <!-- Adjusted Dark (ThemeBackground) -->

    <!-- Button Colors -->
    <Color x:Key="MahApps.Colors.Button.Flat.Background.Pressed">#FF888888</Color>
    <!-- Adjusted Dark (New Gray7) -->
    <Color x:Key="MahApps.Colors.Button.Flat.Foreground.Pressed">#FFCCCCCC</Color>
    <!-- Adjusted Dark (ThemeForeground) -->

    <!-- Menu Colors -->
    <Color x:Key="MahApps.Colors.ContextMenu.Border">#FF666666</Color>
    <!-- Adjusted Dark (New Gray6) -->
    <Color x:Key="MahApps.Colors.SubMenu.Border">#FF666666</Color>
    <!-- Adjusted Dark (New Gray6) -->
    <Color x:Key="MahApps.Colors.MenuItem.SelectionFill">#FF444444</Color>
    <!-- Adjusted Dark (New Gray4) -->
    <Color x:Key="MahApps.Colors.MenuItem.SelectionStroke">#FF666666</Color>
    <!-- Adjusted Dark (New Gray6) -->
    <Color x:Key="MahApps.Colors.TopMenuItem.PressedFill">#FF555555</Color>
    <!-- Adjusted Dark (New Gray5) -->
    <Color x:Key="MahApps.Colors.TopMenuItem.PressedStroke">#FF888888</Color>
    <!-- Adjusted Dark (New Gray7) -->
    <Color x:Key="MahApps.Colors.TopMenuItem.SelectionStroke">#FF6B90B8</Color> <!-- Accent: Keep as is -->
    <Color x:Key="MahApps.Colors.MenuItem.DisabledForeground">#FF888888</Color>
    <!-- Adjusted Dark (New Gray7) -->

    <!-- Badge Colors -->
    <Color x:Key="MahApps.Colors.Badged.Background.Disabled">#FF888888</Color>
    <!-- Adjusted Dark (New Gray7) -->
    <Color x:Key="MahApps.Colors.Badged.Foreground.Disabled">#FFCCCCCC</Color>
    <!-- Adjusted Dark (ThemeForeground) -->

    <!-- Custom Tab Brushes -->
    <SolidColorBrush x:Key="MahApps.Brushes.TabActive"
                     Color="{StaticResource MahApps.Colors.ThemeBackground}"
                     options:Freeze="True"/>
    <SolidColorBrush x:Key="MahApps.Brushes.TabActiveBorder"
                     Color="{StaticResource MahApps.Colors.Gray6}"
                     options:Freeze="True"/>
    <SolidColorBrush x:Key="MahApps.Brushes.TabNonActive"
                     Color="{StaticResource MahApps.Colors.Gray3}"
                     options:Freeze="True"/>
    <SolidColorBrush x:Key="MahApps.Brushes.TabNonActiveBorder"
                     Color="{StaticResource MahApps.Colors.Gray6}"
                     options:Freeze="True"/>
    <SolidColorBrush x:Key=" SystemColors.ControlBrush"
                     Color="{StaticResource MahApps.Colors.ThemeBackground}"
                     options:Freeze="True"/>

    <!-- Custom Thumbnail Item Border -->
    <SolidColorBrush x:Key="MahApps.Brushes.ListItem.MouseOver.Background.Custom"
                     Color="#282828"/>
    <SolidColorBrush x:Key="MahApps.Brushes.ListItem.MouseOver.BorderBrush.Custom"
                     Color="#777777"/>
    <SolidColorBrush x:Key="MahApps.Brushes.CustomBorder"
                     Color="#555555"/>

    <!-- WinUI Style Colors -->
    <Color x:Key="MahApps.Colors.SystemAccent">#FF6B90B8</Color>
    <Color x:Key="MahApps.Colors.SystemAltHigh">#FF000000</Color>
    <!-- Pure Black -->
    <Color x:Key="MahApps.Colors.SystemAltLow">#33000000</Color>
    <!-- Transparent Black -->
    <Color x:Key="MahApps.Colors.SystemAltMedium">#99000000</Color>
    <!-- Semi-Transparent Black -->
    <Color x:Key="MahApps.Colors.SystemAltMediumHigh">#CC000000</Color>
    <!-- More Opaque Black -->
    <Color x:Key="MahApps.Colors.SystemAltMediumLow">#66000000</Color>
    <!-- Less Transparent Black -->
    <Color x:Key="MahApps.Colors.SystemBaseHigh">#FFAAAAAA</Color>
    <!-- Adjusted Dark (New Gray8) -->
    <Color x:Key="MahApps.Colors.SystemBaseLow">#FF777777</Color>
    <!-- Adjusted Dark (New Gray7) -->
    <Color x:Key="MahApps.Colors.SystemBaseMedium">#FF999999</Color>
    <!-- Adjusted Dark (New Gray6) -->
    <Color x:Key="MahApps.Colors.SystemBaseMediumHigh">#FF8F8F8F</Color>
    <!-- Adjusted Dark -->
    <Color x:Key="MahApps.Colors.SystemBaseMediumLow">#FF555555</Color>
    <!-- Adjusted Dark (New Gray5) -->
    <Color x:Key="MahApps.Colors.SystemChromeAltLow">#FFCCCCCC</Color>
    <!-- Adjusted Dark (ThemeForeground) -->
    <Color x:Key="MahApps.Colors.SystemChromeBlackHigh">#FFFFFFFF</Color>
    <!-- Pure White -->
    <Color x:Key="MahApps.Colors.SystemChromeBlackLow">#33FFFFFF</Color>
    <!-- Transparent White -->
    <Color x:Key="MahApps.Colors.SystemChromeBlackMediumLow">#66FFFFFF</Color>
    <!-- Semi-Transparent White -->
    <Color x:Key="MahApps.Colors.SystemChromeBlackMedium">#CCFFFFFF</Color>
    <!-- More Opaque White -->
    <Color x:Key="MahApps.Colors.SystemChromeDisabledHigh">#FF555555</Color>
    <!-- Adjusted Dark (New Gray5) -->
    <Color x:Key="MahApps.Colors.SystemChromeDisabledLow">#FF333333</Color>
    <!-- Adjusted Dark (New Gray3) -->
    <Color x:Key="MahApps.Colors.SystemChromeHigh">#FF666666</Color>
    <!-- Adjusted Dark (New Gray6) -->
    <Color x:Key="MahApps.Colors.SystemChromeLow">#FF222222</Color>
    <!-- Adjusted Dark (ThemeBackground) -->
    <Color x:Key="MahApps.Colors.SystemChromeMedium">#FF222222</Color>
    <!-- Adjusted Dark (New Gray2) -->
    <Color x:Key="MahApps.Colors.SystemChromeMediumLow">#FF111111</Color>
    <!-- Adjusted Dark (New Gray1) -->
    <Color x:Key="MahApps.Colors.SystemChromeWhite">#FF000000</Color>
    <!-- Pure Black -->
    <Color x:Key="MahApps.Colors.SystemChromeGray">#FF777777</Color>
    <!-- Adjusted Dark (New Gray7) -->
    <Color x:Key="MahApps.Colors.SystemListLow">#1AFFFFFF</Color>
    <!-- Very Transparent White -->
    <Color x:Key="MahApps.Colors.SystemListMedium">#33FFFFFF</Color>
    <!-- Transparent White -->
    <Color x:Key="MahApps.Colors.SystemErrorText">#FFFF5252</Color>
    <!-- Adjusted Light Red -->

</ResourceDictionary>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=PresentationFramework"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Taupe.xaml"/>
    </ResourceDictionary.MergedDictionaries>

   <!-- 基本カラー -->
    <Color x:Key="GrayLightPrimaryColor">#DDDDDD</Color>  <!-- メインの明るい灰色 -->
    <Color x:Key="GrayLightDarkColor">#CCCCCC</Color>  <!-- やや濃い灰色 -->
    <Color x:Key="GrayLightHighlightColor">#BBBBBB</Color>  <!-- ハイライト -->
    <Color x:Key="GrayLightBorderColor">#AAAAAA</Color>  <!-- 境界線 -->

    <Color x:Key="MahApps.Colors.ThemeBackground">#EEEEEE</Color>
    <SolidColorBrush x:Key="MahApps.Brushes.ThemeBackground" Color="{StaticResource MahApps.Colors.ThemeBackground}" />

    <!-- アクセントカラーの設定 -->
    <SolidColorBrush x:Key="MahApps.Brushes.Accent" Color="{StaticResource GrayLightHighlightColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.AccentBrush" Color="{StaticResource GrayLightPrimaryColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.Accent2" Color="{StaticResource GrayLightDarkColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.Accent3" Color="{StaticResource GrayLightHighlightColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.Accent4" Color="{StaticResource GrayLightBorderColor}" />

    <!-- ウィンドウタイトルバー -->
    <SolidColorBrush x:Key="MahApps.Brushes.WindowTitle" Color="{StaticResource GrayLightPrimaryColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.WindowTitleNonActive" Color="{StaticResource GrayLightDarkColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.IdealForeground" Color="Black" />

    <!-- Menu -->
    <SolidColorBrush x:Key="MahApps.Brushes.Menu.Background" Color="{StaticResource MahApps.Colors.ThemeBackground}" />
    <SolidColorBrush x:Key="MahApps.Brushes.MenuItem.Background" Color="{StaticResource MahApps.Colors.ThemeBackground}" />
    <SolidColorBrush x:Key="MahApps.Brushes.SubMenu.Background" Color="{StaticResource MahApps.Colors.ThemeBackground}" />

    <!-- タブ -->
    <SolidColorBrush x:Key="MahApps.Brushes.TabActive" Color="{StaticResource MahApps.Colors.ThemeBackground}" />
    <SolidColorBrush x:Key="MahApps.Brushes.TabNonActive" Color="{StaticResource GrayLightDarkColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.TabActiveBorder" Color="#888888" />
    <SolidColorBrush x:Key="MahApps.Brushes.TabNonActiveBorder" Color="#888888" />

    <!-- サムネイルの通常枠 -->
    <SolidColorBrush x:Key="MahApps.Brushes.CustomBackground" Color="#EEEEEE" />
    <SolidColorBrush x:Key="MahApps.Brushes.CustomBorder" Color="#CCCCCC" />

    <!-- 主張を弱めるテキスト用 -->
    <SolidColorBrush x:Key="MahApps.Brushes.TextForegroundMuted" Color="#666666" />

    <!-- ステータスバーの背景色（薄いグレー） -->
    <SolidColorBrush x:Key="MahApps.Brushes.StatusBarBackground" Color="#EEEEEE" />
    <SolidColorBrush x:Key="MahApps.Brushes.StatusBarForeground" Color="Black" />
    <SolidColorBrush x:Key="MahApps.Brushes.StatusBarBorder" Color="#CCCCCC" />

    <!-- FlatSliderの色 -->

    <!-- FlatSliderの色 -->
    <!-- トラック全体（背景） -->
    <SolidColorBrush x:Key="MahApps.Brushes.SliderTrackFill" Color="#CCCCCC"/>
    <!-- 進捗部分 -->
    <SolidColorBrush x:Key="MahApps.Brushes.SliderTrackValueFill" Color="#007ACC"/>
    <!-- サム（つまみ）の背景 -->
    <SolidColorBrush x:Key="MahApps.Brushes.SliderThumbBackground" Color="#007ACC"/>
    <!-- サムの枠線 -->
    <SolidColorBrush x:Key="MahApps.Brushes.SliderThumbBorder" Color="#555555"/>
    <!-- ホバー時のサム背景 -->
    <SolidColorBrush x:Key="MahApps.Brushes.SliderThumbHoverBackground" Color="#0055AA"/>
    <!-- ホバー時のサム枠線 -->
    <SolidColorBrush x:Key="MahApps.Brushes.SliderThumbHoverBorder" Color="#333333"/>
    <!-- 押下時のサム背景 -->
    <SolidColorBrush x:Key="MahApps.Brushes.SliderThumbPressedBackground" Color="#003377"/>
    <!-- 押下時のサム枠線 -->
    <SolidColorBrush x:Key="MahApps.Brushes.SliderThumbPressedBorder" Color="#222222"/>

    <!-- カスタムスライダーサイズ -->
    <System:Double x:Key="IllustraDefaultThumbSize">20</System:Double>

    <!-- ボーダー（枠）や GlowBrush -->
    <SolidColorBrush x:Key="MahApps.Brushes.BorderBrush" Color="{StaticResource GrayLightBorderColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.GlowBrush" Color="{StaticResource GrayLightHighlightColor}" />

    <!-- コントロールの背景 -->
    <SolidColorBrush x:Key="MahApps.Brushes.Control.Background" Color="{StaticResource GrayLightPrimaryColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.Control.Foreground" Color="Black" />

    <!-- ボタンのスタイル -->
    <SolidColorBrush x:Key="MahApps.Brushes.Button.Background" Color="{StaticResource GrayLightPrimaryColor}" />
    <SolidColorBrush x:Key="MahApps.Brushes.Button.Foreground" Color="Black" />
    <SolidColorBrush x:Key="MahApps.Brushes.Button.BorderBrush" Color="{StaticResource GrayLightBorderColor}" />

    <!-- フォルダツリーの選択時のテキスト色 -->
    <SolidColorBrush x:Key="MahApps.Brushes.Selected.Foreground" Color="Black" />

</ResourceDictionary>

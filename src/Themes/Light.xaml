<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    mc:Ignorable="options">

    <ResourceDictionary.MergedDictionaries>
        <!-- Base resources -->
        <ResourceDictionary Source="pack://application:,,,/Themes/Base.xaml" />
        <!-- MahApps Light theme (if needed, but likely overridden) -->
        <!-- <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.xaml" /> -->
    </ResourceDictionary.MergedDictionaries>

    <!-- Theme Metadata -->
    <system:String x:Key="Theme.Name">Illustra.Light</system:String>
    <system:String x:Key="Theme.Origin">Illustra</system:String>
    <system:String x:Key="Theme.DisplayName">Illustra Light</system:String>
    <system:String x:Key="Theme.BaseColorScheme">Light</system:String>
    <system:String x:Key="Theme.ColorScheme">Illustra.Light</system:String>
    <Color x:Key="Theme.PrimaryAccentColor">#FF6B90B8</Color> <!-- TODO: Verify/Adjust color value -->

    <!-- MahApps Base Colors (Light Theme Specific) -->
    <!-- ACCENT COLORS -->
    <Color x:Key="MahApps.Colors.Highlight">#FF6B90B8</Color> <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.AccentBase">#FF6B90B8</Color> <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.Accent">#CC6B90B8</Color> <!-- 80% --> <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.Accent2">#996B90B8</Color> <!-- 60% --> <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.Accent3">#666B90B8</Color> <!-- 40% --> <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.Accent4">#336B90B8</Color> <!-- 20% --> <!-- TODO: Verify/Adjust color value -->

    <!-- BASE COLORS -->
    <Color x:Key="MahApps.Colors.ThemeForeground">#FF333333</Color> <!-- Soft Black -->
    <Color x:Key="MahApps.Colors.ThemeBackground">#FFDDDDDD</Color> <!-- Off White -->
    <Color x:Key="MahApps.Colors.IdealForeground">#FF333333</Color> <!-- Soft Black -->
    <Color x:Key="MahApps.Colors.Gray1">#FFE0E0E0</Color> <!-- Adjusted Lightest Gray -->
    <Color x:Key="MahApps.Colors.Gray2">#FFDDDDDD</Color> <!-- Adjusted to match new ThemeBackground -->
    <Color x:Key="MahApps.Colors.Gray3">#FFCCCCCC</Color> <!-- Adjusted -->
    <Color x:Key="MahApps.Colors.Gray4">#FFBBBBBB</Color> <!-- Adjusted -->
    <Color x:Key="MahApps.Colors.Gray5">#FFAAAAAA</Color> <!-- Adjusted -->
    <Color x:Key="MahApps.Colors.Gray6">#FF999999</Color> <!-- Adjusted -->
    <Color x:Key="MahApps.Colors.Gray7">#FF888888</Color> <!-- Adjusted -->
    <Color x:Key="MahApps.Colors.Gray8">#FF555555</Color> <!-- Adjusted -->
    <Color x:Key="MahApps.Colors.Gray9">#FFAAAAAA</Color> <!-- combo box selected background (w/a) -->
    <Color x:Key="MahApps.Colors.Gray10">#FF333333</Color> <!-- for menu check -->
    <Color x:Key="MahApps.Colors.Gray">#FF999999</Color> <!-- Adjusted Mid Gray (New Gray6) -->
    <Color x:Key="MahApps.Colors.Gray.MouseOver">#FF777777</Color> <!-- Adjusted Darker Gray (New Gray8) -->
    <Color x:Key="MahApps.Colors.Flyout">#FFDDDDDD</Color> <!-- Adjusted Light Gray (New Gray2 / ThemeBackground) -->

    <!-- CORE CONTROL COLORS -->
    <Color x:Key="MahApps.Colors.ProgressIndeterminate1">#33878787</Color> <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.ProgressIndeterminate2">#33959595</Color> <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.ProgressIndeterminate3">#4C878787</Color> <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.ProgressIndeterminate4">#4C959595</Color> <!-- TODO: Verify/Adjust color value -->

    <!-- Slider Colors -->
    <Color x:Key="MahApps.Colors.SliderValue.Disabled">#FFB3B3B3</Color> <!-- New Gray7: #FF888888 -->
    <Color x:Key="MahApps.Colors.SliderTrack.Disabled">#FFCCCCCC</Color> <!-- Adjusted (New Gray3) -->
    <Color x:Key="MahApps.Colors.SliderThumb.Disabled">#FFAAAAAA</Color> <!-- Adjusted (New Gray5) -->
    <Color x:Key="MahApps.Colors.SliderTrack.Hover">#FF777777</Color> <!-- Adjusted (New Gray8) -->
    <Color x:Key="MahApps.Colors.SliderTrack.Normal">#FFAAAAAA</Color> <!-- Adjusted (New Gray5) -->
    <SolidColorBrush x:Key="controls:SliderHelper.ThumbFillBrush" Color="{DynamicResource MahApps.Colors.Gray3}" />
    <SolidColorBrush x:Key="controls:SliderHelper.ThumbBorderBrush" Color="{DynamicResource MahApps.Colors.Gray6}" />



    <!-- Window Colors -->
    <Color x:Key="MahApps.Colors.Window.Background.Backdrop.Acrylic">#B2F5F5F5</Color> <!-- TODO: Verify/Adjust color value -->
    <Color x:Key="MahApps.Colors.Window.Background.Backdrop.Auto">#FFDDDDDD</Color> <!-- Adjusted to match new ThemeBackground --> <!-- TODO: Verify/Adjust color value -->

    <!-- Button Colors -->
    <Color x:Key="MahApps.Colors.Button.Flat.Background.Pressed">#FF777777</Color> <!-- Adjusted (New Gray8) -->
    <Color x:Key="MahApps.Colors.Button.Flat.Foreground.Pressed">#FF333333</Color> <!-- ThemeForeground -->

    <!-- Menu Colors -->
    <Color x:Key="MahApps.Colors.ContextMenu.Border">#FF999999</Color> <!-- Adjusted (New Gray6) -->
    <Color x:Key="MahApps.Colors.SubMenu.Border">#FF999999</Color> <!-- Adjusted (New Gray6) -->
    <Color x:Key="MahApps.Colors.MenuItem.SelectionFill">#FFBBBBBB</Color> <!-- Adjusted (New Gray4) -->
    <Color x:Key="MahApps.Colors.MenuItem.SelectionStroke">#FF999999</Color> <!-- Adjusted (New Gray6) -->
    <Color x:Key="MahApps.Colors.TopMenuItem.PressedFill">#FFAAAAAA</Color> <!-- Adjusted (New Gray5) -->
    <Color x:Key="MahApps.Colors.TopMenuItem.PressedStroke">#FF777777</Color> <!-- Adjusted (New Gray8) -->
    <Color x:Key="MahApps.Colors.TopMenuItem.SelectionStroke">#FF6B90B8</Color>
    <Color x:Key="MahApps.Colors.MenuItem.DisabledForeground">#FF777777</Color> <!-- Adjusted (New Gray8) -->

    <!-- Badge Colors -->
    <Color x:Key="MahApps.Colors.Badged.Background.Disabled">#FF777777</Color> <!-- Adjusted (New Gray8) -->
    <Color x:Key="MahApps.Colors.Badged.Foreground.Disabled">#FF333333</Color> <!-- ThemeForeground -->

    <!-- Custom Tab Brushes -->
    <SolidColorBrush x:Key="MahApps.Brushes.TabActive"
                     Color="{StaticResource MahApps.Colors.ThemeBackground}"
                     options:Freeze="True"/>
    <SolidColorBrush x:Key="MahApps.Brushes.TabActiveBorder"
                     Color="{StaticResource MahApps.Colors.Gray6}"
                     options:Freeze="True"/>
    <SolidColorBrush x:Key="MahApps.Brushes.TabNonActive"
                     Color="{StaticResource MahApps.Colors.Gray3}"
                     options:Freeze="True"/>
    <SolidColorBrush x:Key="MahApps.Brushes.TabNonActiveBorder"
                     Color="{StaticResource MahApps.Colors.Gray6}"
                     options:Freeze="True"/>
    <SolidColorBrush x:Key=" SystemColors.ControlBrush"
                     Color="{StaticResource MahApps.Colors.ThemeBackground}"
                     options:Freeze="True"/>
    <!-- Custom Thumbnail Item Border -->
    <SolidColorBrush x:Key="MahApps.Brushes.CustomBackground" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="MahApps.Brushes.CustomBorder"     Color="#CCCCCC"/>

    <!-- WinUI Style Colors -->
    <Color x:Key="MahApps.Colors.SystemAccent">#FF6B90B8</Color>
    <Color x:Key="MahApps.Colors.SystemAltHigh">#FFFFFFFF</Color> <!-- Pure White -->
    <Color x:Key="MahApps.Colors.SystemAltLow">#33FFFFFF</Color> <!-- Transparent White -->
    <Color x:Key="MahApps.Colors.SystemAltMedium">#99FFFFFF</Color> <!-- Semi-Transparent White -->
    <Color x:Key="MahApps.Colors.SystemAltMediumHigh">#CCFFFFFF</Color> <!-- More Opaque White -->
    <Color x:Key="MahApps.Colors.SystemAltMediumLow">#66FFFFFF</Color> <!-- Less Transparent White -->
    <Color x:Key="MahApps.Colors.SystemBaseHigh">#FF555555</Color> <!-- Hover color for controls -->
    <Color x:Key="MahApps.Colors.SystemBaseLow">#FF888888</Color> <!-- Adjusted (New Gray7) -->
    <Color x:Key="MahApps.Colors.SystemBaseMedium">#FF666666</Color> <!-- Adjusted (New Gray9) -->
    <Color x:Key="MahApps.Colors.SystemBaseMediumHigh">#FF707070</Color> <!-- Darker Gray (from Theme.Colors.Light) -->
    <Color x:Key="MahApps.Colors.SystemBaseMediumLow">#FFAAAAAA</Color> <!-- Adjusted (New Gray5) -->
    <Color x:Key="MahApps.Colors.SystemChromeAltLow">#FF333333</Color> <!-- ThemeForeground -->
    <Color x:Key="MahApps.Colors.SystemChromeBlackHigh">#FF000000</Color> <!-- Pure Black -->
    <Color x:Key="MahApps.Colors.SystemChromeBlackLow">#33000000</Color> <!-- Transparent Black -->
    <Color x:Key="MahApps.Colors.SystemChromeBlackMediumLow">#66000000</Color> <!-- Semi-Transparent Black -->
    <Color x:Key="MahApps.Colors.SystemChromeBlackMedium">#CC000000</Color> <!-- More Opaque Black -->
    <Color x:Key="MahApps.Colors.SystemChromeDisabledHigh">#FFAAAAAA</Color> <!-- Adjusted (New Gray5) -->
    <Color x:Key="MahApps.Colors.SystemChromeDisabledLow">#FFCCCCCC</Color> <!-- Adjusted (New Gray3) -->
    <Color x:Key="MahApps.Colors.SystemChromeHigh">#FF999999</Color> <!-- Adjusted (New Gray6) -->
    <Color x:Key="MahApps.Colors.SystemChromeLow">#FFDDDDDD</Color> <!-- Adjusted to match new ThemeBackground -->
    <Color x:Key="MahApps.Colors.SystemChromeMedium">#FFDDDDDD</Color> <!-- Adjusted (New Gray2) -->
    <Color x:Key="MahApps.Colors.SystemChromeMediumLow">#FFEEEEEE</Color> <!-- Adjusted (New Gray1) -->
    <Color x:Key="MahApps.Colors.SystemChromeWhite">#FFFFFFFF</Color> <!-- Pure White -->
    <Color x:Key="MahApps.Colors.SystemChromeGray">#FF888888</Color> <!-- Adjusted (New Gray7) -->
    <Color x:Key="MahApps.Colors.SystemListLow">#1A000000</Color> <!-- Very Transparent Black -->
    <Color x:Key="MahApps.Colors.SystemListMedium">#33000000</Color> <!-- Transparent Black -->
    <Color x:Key="MahApps.Colors.SystemErrorText">#C50500</Color> <!-- TODO: Verify/Adjust color value (Darker Red) -->

</ResourceDictionary>

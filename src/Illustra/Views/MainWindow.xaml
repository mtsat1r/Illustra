<Window x:Class="Illustra.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vw="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        xmlns:local="clr-namespace:Illustra"
        xmlns:helpers="clr-namespace:Illustra.Helpers"
        xmlns:viewmodels="clr-namespace:Illustra.ViewModels"
        mc:Ignorable="d"
        Icon="{StaticResource AppIcon}"
        Title="Illustra - 画像ビューア"
        Height="600"
        Width="900">
    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- メニューバー -->
        <Menu Grid.Row="0">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="開く(_O)" />
                <Separator />
                <MenuItem Header="終了(_X)" Click="ExitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="表示(_V)">
                <MenuItem Header="サムネイルサイズ(_S)">
                    <MenuItem Header="小(_S)" Click="SmallThumbnailMenuItem_Click" />
                    <MenuItem Header="中(_M)" Click="MediumThumbnailMenuItem_Click" IsChecked="True" />
                    <MenuItem Header="大(_L)" Click="LargeThumbnailMenuItem_Click" />
                </MenuItem>
                <Separator />
                <MenuItem Header="更新(_R)" Click="RefreshMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="ツール(_T)">
                <MenuItem Header="設定(_S)" Click="SettingsMenuItem_Click" />
            </MenuItem>
        </Menu>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左側：フォルダツリービュー -->
            <TreeView x:Name="FolderTreeView"
                    Grid.Column="0"
                    SelectedItemChanged="FolderTreeView_SelectedItemChanged">
                <TreeView.Resources>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFD47B00"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsKeyboardFocused" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            </MultiTrigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0F000000"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TreeView.Resources>
            </TreeView>

            <!-- 右側：メインコンテンツエリア -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- サムネイルサイズ調整用のスライダー -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <TextBlock Text="サムネイルサイズ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Slider x:Name="ThumbnailSizeSlider"
                            Width="150"
                            Minimum="60"
                            Maximum="480"
                            Value="120"
                            TickFrequency="20"
                            IsSnapToTickEnabled="True"
                            ValueChanged="ThumbnailSizeSlider_ValueChanged"/>
                    <TextBlock x:Name="ThumbnailSizeText" Text="120" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

                <!-- サムネイル表示エリア -->
                <ListView x:Name="ThumbnailItemsControl"
                        Grid.Row="1"
                        ItemsSource="{Binding Items}"
                        SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                        SelectionMode="Single"
                        IsSynchronizedWithCurrentItem="True"
                        Loaded="ThumbnailItemsControl_Loaded"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.PanningMode="Both"
                        ScrollViewer.IsDeferredScrollingEnabled="True"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling"
                        VirtualizingPanel.CacheLengthUnit="Page"
                        VirtualizingPanel.CacheLength="1,1"
                        VirtualizingPanel.IsContainerVirtualizable="True"
                        VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                        VirtualizingPanel.ScrollUnit="Pixel"
                        BorderThickness="0"
                        KeyDown="ThumbnailItemsControl_KeyDown"
                        PreviewMouseWheel="ThumbnailItemsControl_PreviewMouseWheel"
                        KeyboardNavigation.DirectionalNavigation="Contained"
                        KeyboardNavigation.TabNavigation="Cycle"
                        Focusable="True"
                        FocusVisualStyle="{x:Null}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <vw:VirtualizingWrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="KeyboardNavigation.TabNavigation" Value="None" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
                            <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel" />
                            <EventSetter Event="MouseDoubleClick" Handler="Thumbnail_MouseDoubleClick"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                                                BorderThickness="1"
                                                SnapsToDevicePixels="True">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                                <Setter TargetName="Border" Property="BorderThickness" Value="2" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#0F000000"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Width="{Binding ElementName=ThumbnailSizeSlider, Path=Value}"
                                    Height="{Binding ElementName=ThumbnailSizeSlider, Path=Value}"
                                    Margin="3" BorderThickness="1"
                                    BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                                    MouseLeftButtonDown="Thumbnail_MouseLeftButtonDown">
                                <Grid>
                                    <Image Source="{Binding ThumbnailInfo.Thumbnail}"
                                        Stretch="Uniform"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="2"/>
                                    <TextBlock Text="{Binding Name}"
                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Center"
                                            Margin="2"
                                            Background="#80FFFFFF"
                                            Padding="2"
                                            Width="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                                            TextAlignment="Center"
                                            TextTrimming="CharacterEllipsis"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- グリッドスプリッター -->
                <GridSplitter Grid.Row="2"
                            Height="5"
                            HorizontalAlignment="Stretch"
                            Background="#FFCCCCCC" />

                <!-- プロパティペイン -->
                <Grid Grid.Row="3" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- ヘッダー -->
                    <TextBlock Grid.Row="0"
                            Text="プロパティ"
                            FontWeight="Bold"
                            Margin="0,0,0,5"/>

                    <!-- プロパティ表示 -->
                    <ScrollViewer Grid.Row="1"
                                VerticalScrollBarVisibility="Auto">
                        <Grid x:Name="PropertiesGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- ファイル情報 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ファイル名:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="PropFileName" Text="" Margin="0,2,0,2"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="パス:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PropFilePath" Text="" TextWrapping="Wrap" Margin="0,2,0,2"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="サイズ:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="PropFileSize" Text="" Margin="0,2,0,2"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="作成日時:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="PropCreatedDate" Text="" Margin="0,2,0,2"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="更新日時:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="PropModifiedDate" Text="" Margin="0,2,0,2"/>

                            <!-- 画像情報 -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Text="画像情報" FontWeight="Bold" Margin="0,10,0,5"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="解像度:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" x:Name="PropResolution" Text="" Margin="0,2,0,2"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="フォーマット:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" x:Name="PropFormat" Text="" Margin="0,2,0,2"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="色深度:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" x:Name="PropColorDepth" Text="" Margin="0,2,0,2"/>

                            <!-- Exif情報 -->
                            <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Text="Exif情報" FontWeight="Bold" Margin="0,10,0,5"/>

                            <TextBlock Grid.Row="10" Grid.Column="0" Text="カメラ:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="10" Grid.Column="1" x:Name="PropCamera" Text="" Margin="0,2,0,2"/>

                            <TextBlock Grid.Row="11" Grid.Column="0" Text="撮影日時:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="11" Grid.Column="1" x:Name="PropDateTaken" Text="" Margin="0,2,0,2"/>

                            <TextBlock Grid.Row="12" Grid.Column="0" Text="露出時間:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="12" Grid.Column="1" x:Name="PropExposureTime" Text="" Margin="0,2,0,2"/>

                            <TextBlock Grid.Row="13" Grid.Column="0" Text="F値/ISO:" FontWeight="SemiBold" Margin="0,2,5,2"/>
                            <TextBlock Grid.Row="13" Grid.Column="1" x:Name="PropFNumberISO" Text="" Margin="0,2,0,2"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
